    <script>
        function copyPhoneNumber() {
            const phoneNumber = "17888725672";
            navigator.clipboard.writeText(phoneNumber).then(() => {
                showToast();
            });
        }
        
        function showToast() {
            const toast = document.getElementById('toast');
            toast.classList.add('show');
            
            setTimeout(() => {
                toast.classList.remove('show');
            }, 2000);
        }
    </script>
